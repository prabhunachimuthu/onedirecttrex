
@{

}
@*@model IEnumerable<OneDirect.Models.User>*@
<section class="content-header">
    <h1>
        Providers
        @*<small>Control panel</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Provider</li>
    </ol>
</section>

<!-- Main content -->


<div class="col-md-2" style="padding-top:20px">
    <table class="table table-bordered text-center">
        <td>
            @Html.ActionLink("Add", "Add", new { }, new { @class = "btn btn-block btn-warning btn-sm" })
            @*<a href="therapistform.html">
                    <button type="button" class="btn btn-block btn-warning btn-lg">Add</button>
                </a>*@
        </td>
    </table>
</div>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                @*<div class="box-header">
                        <h3 class="box-title">Providers </h3>
                    </div>*@
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" style="font-size:small" role="grid" aria-describedby="example1_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Provider Name: activate to sort column descending" style="width: 182px;">Provider Name</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Email: activate to sort column descending" style="width: 182px;">Email</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Provider Id: activate to sort column descending" style="width: 182px;">Provider Id</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Phone: activate to sort column descending" style="width: 182px;">NPI</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Phone: activate to sort column descending" style="width: 182px;">Phone</th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Address: activate to sort column descending" style="width: 182px;">Address</th>
                                            <th tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Actions : activate to sort column descending" style="width: 182px;"></th>
                                            @*<th>Provider Name</th>
                                            <th>Email</th>
                                            <th>Provider Id</th>
                                            <th>Phone</th>
                                            <th>Address</th>
                                            <th></th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.userlist != null)
                                        {
                                            @foreach (var item in ViewBag.userlist)
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.UserId</td>
                                                    <td>@item.Npi</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Address</td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Profile", new { id = item.UserId }, new { @class = "label label-primary" })
                                                        @Html.ActionLink("Patients","Index", "Patient", new { provider = item.UserId ,ptype=item.Type, providername = item.Name }, new { @class = "label label-primary" })
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example1').DataTable({
            "stateSave": true,
            "stateDuration": -1,
            'aoColumnDefs': [{
                'bSortable': false,
                'aTargets': [-1] /* 1st one, start by the right */
            }]
        });

    });

</script>